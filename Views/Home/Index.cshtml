<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.5.1/css/bulma.min.css">
</head>
<body>
	<nav class="navbar" style="background-color: lightslategrey">
		<div class="navbar-brand">
			<h2 class="navbar-item"><strong style="color: white">DroneUp</strong></h2>
		</div>
	</nav>
	<div class="container">
		<div class="columns" style="margin-top: 20px; margin-bottom: 20px;">
			<div class="column">
				<div>
					<button type="button" id="startStopButton">Start Game</button>
					<button disabled type="button" id="pauseResumeButton">Pause Game</button>
				</div>
				<div>
					Seed:
					<input id="seedInput" type="text" onkeypress="return event.charCode >= 48 && event.charCode <= 57"></input>
				</div>
				<div>
					<input type="file" id="fileUploader">
				</div>
				<div>
					<div>Loaded Drones</div>
					<textarea disabled cols="50" id="droneNameList"></textarea>
				</div>
			</div>
			<div class="column">
				<canvas id="game-canvas" width="1000" height="800" style="background: #4D4D4D;"></canvas>
			</div>
		</div>
	</div>
</body>
<footer class="footer">
	<div class="container">
		<div class="content has-text-centered">
			<p>
				<strong>DroneUp 2017</strong>
			</p>
			<p>
				<a class="icon" href="https://github.com/alexriedl/drone-up">
					<i class="fa fa-github"></i>
				</a>
			</p>
		</div>
	</div>
</footer>
</html>

@section scripts {
	<script type='text/javascript' src='~/lib/tsm-0.7.min.js'></script>
	<script type='text/javascript' src='~/dist/common.js'></script>
	<script type='text/javascript' src='~/dist/main.js'></script>
}
